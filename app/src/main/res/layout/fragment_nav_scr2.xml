<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.example.assignment14.viewmodel.NavigationViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.NavScr2Fragment"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <!-- TODO: Update blank fragment layout -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swScr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_current_screen_to_backstack"
            android:checked="@={viewmodel.swScr2ToScr3}"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScr2ToScr3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/go_to_screen_3" />

    </LinearLayout>
</layout>
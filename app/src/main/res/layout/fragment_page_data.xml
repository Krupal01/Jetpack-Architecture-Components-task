    <data>
        <variable
            name="pageDataAdapter"
            type="com.example.assignment14.adapter.PageDataAdapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.PageDataFragment"
